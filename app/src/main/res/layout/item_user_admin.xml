<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_item_user_admin">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_user_admin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/name_user_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_user_admin"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/blank"
                android:textSize="17sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/user_block_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/image_user_admin" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>